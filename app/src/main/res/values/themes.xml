<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShoeStore" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShoeGeneralStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/general_text_color</item>
    </style>

    <style name="LoginStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LoginSuccess">
        <item name="android:color">@color/logincolor</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="LoginFailure">
        <item name="android:color">@color/loginfailure</item>
        <item name="android:background">@color/failure_background_color</item>
    </style>

    <style name="ShoeButtons">
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">#227E26</item>

    </style>
</resources>